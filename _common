"Do not show mode
"set noshowmode
"Make command line two lines high
set nocompatible
set ch=2

set encoding=utf-8

" fix shell commands
set sh=cmd.exe
set shcf=/C


"Allow backspace over EOLs
set backspace=2

"Don't wrap lines
set nowrap
"No ignorecase if search pattern contains upper case letters
set nosmartcase

"Tabstop
set tabstop=4
set smarttab
set expandtab
"Smart-indent
set nosmartindent
set autoindent
set shiftwidth=4
set incsearch
set showcmd
set nostartofline
set cpoptions=aABceFs
set showmatch
"Switch on syntax highlighting.
set background=dark
syntax on
set clipboard=unnamed
set laststatus=2
" Set wildchard expansion to tab
set wc=9

" set up grep
set gp=grep\ -n\ $*\ %
set gfm=%l:%m
map <C-J> <C-W>j<C-W>_
map <C-K> <C-W>k<C-W>_
map <C-H> <C-W>h<C-W>\|
map <C-L> <C-W>l<C-W>\|


"Mimic MS-Windows behaviour
source $vim/comments.vim
source $VIM/vim74/mswin.vim
source $vim/vimfiles/tagssetter.vim

execute pathogen#infect()
filetype plugin indent on
